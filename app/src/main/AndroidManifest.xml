<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.gbsoft.cronometro"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.gbsoft.cronometro.CronometroApplication"
        android:allowBackup="true"
        android:icon="@drawable/cronometro"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.gbsoft.cronometro.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="com.gbsoft.cronometro.NotificationUpdateService"
            android:enabled="true"
            android:exported="false">
        </service>
    </application>

</manifest>
